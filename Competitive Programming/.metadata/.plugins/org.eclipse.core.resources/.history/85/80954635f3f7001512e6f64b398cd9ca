import java.util.*;
class Q1 
{
	public static void main(String[] args)
	{
		Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		int max = 1000000007;
		while(t-->0)
		{
			int r = sc.nextInt();
			int g = sc.nextInt();
			int b = sc.nextInt();
			
			int k = sc.nextInt();
			int min = Math.min(Math.min(r,b),g);
			
			long ans=0;
			if(k<=min)
			{
				ans = (k-1)*3 +1;
				System.out.println(ans);
			}
			else
			{
				ans = min*3;
				r-=min;
				if(r==0)
					r = max;
				b-=min;
				if(b==0)
					b=max;
				g-=min;
				if(g==0)
					g=max;
				k-=min;
				min = Math.min(Math.min(r,b),g);
				
				if(k<=min)
				{
					ans += (k-1)*2 +1;
					System.out.println(ans);
				}
				else
				{
					ans += min*2 +1;
					System.out.println(ans);
				}
				
				

				
			}
		}
	}
}
