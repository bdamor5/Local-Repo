import java.util.*;
class Q1 
{
	public static void main(String[] args)
	{
		Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		int max = 1000000007;
		while(t-->0)
		{
			int r = sc.nextInt();
			int g = sc.nextInt();
			int b = sc.nextInt();
			
			long k = sc.nextInt();
			long min = Math.min(Math.min(r,b),g);
			
			long ans=0;
			if(k<=min)
			{
				ans = (k-1)*3 +1;
				System.out.println(ans);
			}
			else
			{
				ans = min*3;
				int c= 0;
				r-=min;
				if(r==0)
				{
					r = max;
					c++;
				}
				b-=min;
				if(b==0)
				{
					b=max;
					c++;
				}
				g-=min;
				if(g==0)
				{
					g=max;
					c++;
				}
				k-=min;
				min = Math.min(Math.min(r,b),g);
				
				if(k<=min)
				{
					ans += (k-1)*(3-c) +1;
					System.out.println(ans);
				}
				else
				{
					ans += min*(3-c);
					k-=min;
					System.out.println(ans+k);
				}
				
				

				
			}
		}
	}
}
